*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
-A INPUT -p tcp --dport 5432 -s {% for ip in galaxy_host_ips %}{{ ip }}{% if not loop.last %},{% endif %}{% endfor %} -j ACCEEPT
-A INPUT -p tcp --dport 5432 -s {% for hosts in groups['web'] %}{{ host }}{% if not loop.last %},{% endif %}{% endfor %} -j ACCEPT
-A INPUT -p tcp --dport 5432 -s {% for hosts in groups['db'] %}{{ host }}{% if not loop.last %},{% endif %}{% endfor %} -j ACCEPT
-A INPUT -p tcp --dport 5672 -s {% for hosts in groups['web'] %}{{ host }}{% if not loop.last %},{% endif %}{% endfor %} -j ACCEPT
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
-A INPUT -p icmp -j ACCEPT
-A INPUT -i lo -j ACCEPT
-A INPUT -p tcp -m state --state NEW -m tcp --dport 22 -j ACCEPT
-A INPUT -j REJECT --reject-with icmp-host-prohibited
-A FORWARD -j REJECT --reject-with icmp-host-prohibited
COMMIT
